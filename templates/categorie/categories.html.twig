{% extends 'base.html.twig' %}

{% block title %}Voici la liste des catégories{% endblock %}

{% block body %}

    <h1>Catégories :</h1>

    {% for categorie in categories %}
<div class="container">
    <div class="row justify-content-between">
        <div class="col-4">
            {{ categorie.titre }} ( {{ categorie.articles.count }} articles )
        </div>
        <div class="col-4">
            <a class="btn btn-primary" href="{{ path('app_categorie_slug', {slug: categorie.slug}) }}" role="button">Voir</a>
        </div>
    </div>
</div>
    {% endfor %}

{% endblock %}
