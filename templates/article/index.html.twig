{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

    <h1>Liste des articles</h1>

    <ol>
        {% for article in articles %}
            <li><a href="{{ path("app_article_slug",{slug: article.slug}) }}">{{ article.titre }}</li></a>
        {% endfor %}
    </ol>

{% endblock %}
